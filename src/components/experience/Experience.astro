---
import Card from '../commons/Card.astro';

import { useTranslations } from '../../i18n/utils';


const { currentLocale } = Astro;


const t = useTranslations(currentLocale ?? 'en');

const experience = [
    {
        date: t('experience.cobreTL.date'),
        title: t('experience.cobreTL.title'),
        description: t('experience.cobreTL.description'),
        currently: true
    },
    {
        date: t('experience.cobreSr.date'),
        title: t('experience.cobreSr.title'),
        description: t('experience.cobreSr.description'),
    },
    {
        date: t('experience.itc.date'),
        title: t('experience.itc.title'),
        description: t('experience.itc.description'),
    },
    {
        date: t('experience.latincarb.date'),
        title: t('experience.latincarb.title'),
        description: t('experience.latincarb.description'),
    },
    {
        date: t('experience.freelance.date'),
        title: t('experience.freelance.title'),
        description: t('experience.freelance.description'),
    }
]

---

<aside>
  <div class="w-100">
    <h3 class="text-5xl font-semibold text-center">Experience</h3>
  </div>

  <Card class="p-8 h-auto max-w-full my-12">
    <ol class="relative border-s border-gray-200">

      {
        experience.map((exp, index) => (
          <li class={`${(experience.length - 1) !== index && 'mb-10'} ms-4`}>
            <div
              class={`absolute w-3 h-3 ${exp.currently ? 'bg-orange-500 neon-smooth-orange' :  'bg-gray-400'} rounded-full mt-1.5 -start-1.5`}
            >
            </div>
            <time class="mb-1 text-sm font-normal leading-none text-orange-400"
              >{exp.date}</time>
            <h3 class="text-lg font-semibold">
              {exp.title}
            </h3>
            <p class="mb-4 text-base font-normal opacity-70">
              {exp.description}
            </p>
          </li>
        ))
      }
    </ol>
  </Card>
</aside>
