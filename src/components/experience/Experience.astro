---
import Card from '../commons/Card.astro';

const experience = [
    {
        date: 'February 2022',
        title: 'Application UI code in Tailwind CSS',
        description: 'Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages.',
        currently: true
    },
    {
        date: 'February 2022',
        title: 'Application UI code in Tailwind CSS',
        description: 'Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages.'
    },
    {
        date: 'February 2022',
        title: 'Application UI code in Tailwind CSS',
        description: 'Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages.'
    },
    {
        date: 'February 2022',
        title: 'Application UI code in Tailwind CSS',
        description: 'Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages.'
    }
]

---

<aside>
  <div class="w-100">
    <h3 class="text-5xl font-semibold text-center">Experience</h3>
  </div>

  <Card class="p-8 h-auto max-w-full my-12">
    <ol class="relative border-s border-gray-200">

      {
        experience.map((exp, index) => (
          <li class={`${(experience.length - 1) !== index && 'mb-10'} ms-4`}>
            <div
              class={`absolute w-3 h-3 ${exp.currently ? 'bg-orange-500 neon-smooth-orange' :  'bg-gray-400'} rounded-full mt-1.5 -start-1.5`}
            >
            </div>
            <time class="mb-1 text-sm font-normal leading-none text-orange-400"
              >{exp.date}</time>
            <h3 class="text-lg font-semibold">
              {exp.title}
            </h3>
            <p class="mb-4 text-base font-normal text-gray-500">
              {exp.description}
            </p>
          </li>
        ))
      }
    </ol>
  </Card>
</aside>
