---
import { Image } from 'astro:assets';
import Card from '../commons/Card.astro';
import { useTranslations } from '../../i18n/utils';

const personalImageAlt = 'Alejandro Padilla';

const { currentLocale } = Astro;

const t = useTranslations(currentLocale ?? 'en');
---

<div class="grid grid-flow-row grind-cols-1 md:grid-cols-3 gap-4">
  <!-- <div class='col-span-2 md:col-span-1 hidden sm:block'> -->
    <Card highlight={false} class="p-2 hidden sm:block h-full">
      <aside class='col-span-2 md:col-span-1 flex justify-center md:block h-full'>
        <Image
          src="/me.webp"
          alt={personalImageAlt}
          class="shadow-lg size-16 w-[60%] md:w-full min-h-96 object-cover rounded-3xl h-full grayscale-[50%] hover:grayscale-0 transition duration-300 ease-in-out"
          width={400}
          height={400}
          loading="eager"
        />
      </aside>
    </Card>
  <!-- </div> -->

  <!-- <div class='col-span-2'> -->
    <Card class="p-8 col-span-1 md:col-span-2">
      <Image
        src="/me.webp"
        alt={personalImageAlt}
        class="w-full object-cover rounded-3xl transition h-[35%] block sm:hidden"
        width={200}
        height={200}
        loading="eager"
      />
    <h2 class='text-4xl font-semibold mb-2 mt-4 md:mt-0'>{t('about.title')}</h2>
    <p class='leading-relaxed opacity-85 mb-1 text-base'>
      {t('about.text1')} 
    </p>
    <p class='text-base leading-relaxed opacity-85 mb-1'>
      {t('about.text2')} 
    </p>
    <p class='text-base leading-relaxed opacity-85'>
      {t('about.text3')} 
    </p>
  </Card>
  <!-- </div> -->

</div>

